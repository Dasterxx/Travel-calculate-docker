<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="1" author="nikita">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="agreement"/></not>
        </preConditions>
        <createTable tableName="agreement">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="agreement_date_from" type="TIMESTAMP"/>
            <column name="agreement_date_to" type="TIMESTAMP"/>
            <column name="insurance_limit" type="DECIMAL(19,2)"/>
            <column name="agreement_premium" type="DECIMAL(19,2)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
