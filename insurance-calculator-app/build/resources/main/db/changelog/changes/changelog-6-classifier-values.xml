<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="6" author="nikita">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="classifier_values"/></not>
            <tableExists tableName="classifiers"/>
        </preConditions>
        <createTable tableName="classifier_values">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="classifier_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="ic" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="classifier_values" baseColumnNames="classifier_id"
                                 referencedTableName="classifiers" referencedColumnNames="id"
                                 constraintName="fk_classifier_values_classifier"/>
    </changeSet>

</databaseChangeLog>
