<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="4" author="nikita">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="agreement_risks"/></not>
            <tableExists tableName="agreement"/>
        </preConditions>
        <createTable tableName="agreement_risks">
            <column name="agreement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="risk" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="agreement_risks" baseColumnNames="agreement_id"
                                 referencedTableName="agreement" referencedColumnNames="id"
                                 constraintName="fk_agreement_risks_agreement"/>
    </changeSet>

</databaseChangeLog>
