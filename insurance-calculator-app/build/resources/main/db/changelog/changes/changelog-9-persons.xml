<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="9" author="nikita">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="persons"/></not>
            <tableExists tableName="agreement"/>
        </preConditions>
        <createTable tableName="persons">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="person_code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="agreement_id" type="BIGINT"/>
            <column name="black_listed" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(255)"/>
            <column name="is_enabled" type="BOOLEAN"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="gender" type="VARCHAR(255)"/>
        </createTable>

        <addUniqueConstraint tableName="persons" columnNames="first_name,last_name,person_code" constraintName="uk_persons_name_code"/>

        <addForeignKeyConstraint baseTableName="persons" baseColumnNames="agreement_id"
                                 referencedTableName="agreement" referencedColumnNames="id"
                                 constraintName="fk_persons_agreement"/>
    </changeSet>

</databaseChangeLog>
