<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet id="2" author="nikita">
        <preConditions onFail="MARK_RAN">
            <not><tableExists tableName="agreement_countries"/></not>
            <tableExists tableName="agreement"/>
            <tableExists tableName="country"/>
        </preConditions>
        <createTable tableName="agreement_countries">
            <column name="agreement_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="country_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="agreement_countries" baseColumnNames="agreement_id"
                                 referencedTableName="agreement" referencedColumnNames="id"
                                 constraintName="fk_agreement_countries_agreement"/>

        <addForeignKeyConstraint baseTableName="agreement_countries" baseColumnNames="country_id"
                                 referencedTableName="country" referencedColumnNames="id"
                                 constraintName="fk_agreement_countries_country"/>
    </changeSet>

</databaseChangeLog>
